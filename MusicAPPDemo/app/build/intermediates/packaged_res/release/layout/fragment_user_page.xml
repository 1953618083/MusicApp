<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f8ff"
    tools:context=".activity.RegisterActivity" >



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/userInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_register_view"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center|left"
                android:text="个人信息"
                android:textSize="14sp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:gravity="center|left"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:textColor="#acacac"

                android:text=">"
                android:textSize="30sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/loveLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_register_view"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center|left"
                android:text="我的喜欢"
                android:textSize="14sp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:gravity="center|left"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:text=">"
                android:textColor="#acacac"

                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/appInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_register_view"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center|left"
                android:text="关于软件"
                android:textSize="14sp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:gravity="center|left"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:text=">"
                android:textColor="#acacac"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/logout_btn"
        android:text="退出登录"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.315" />

    <Button
        android:id="@+id/exitApp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/logout_btn"
        android:text="退出APP"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/logoutBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/logoutBtn"
        app:layout_constraintTop_toBottomOf="@+id/logoutBtn"
        app:layout_constraintVertical_bias="0.115" />
</androidx.constraintlayout.widget.ConstraintLayout>